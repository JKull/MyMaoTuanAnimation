<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="14dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/rv_dt_bg"
    android:layout_height="wrap_content">
    <com.qianfeng.maotuananimation.sortfragment.util.RectangleImageView
        android:scaleType="centerCrop"
        android:layout_width="88dp"
        android:layout_margin="6dp"
        android:src="@drawable/lingdai"
        android:id="@+id/iv"
        android:layout_height="128dp" />
    <TextView
        android:id="@+id/tv_name"
        android:textColor="#000000"
        android:ellipsize="end"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/iv"
        android:layout_alignRight="@id/iv"
        android:layout_below="@id/iv"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:hint="火影忍者"
        android:maxLines="2"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="28sp"
        android:id="@+id/tv_score"
        android:layout_alignTop="@id/iv"
        android:hint="9.6"
        android:layout_toRightOf="@id/iv"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/tv_score"
        android:text="分"
        android:layout_alignBaseline="@id/tv_score"
        android:layout_marginLeft="4dp"
        android:ellipsize="end"
        android:layout_height="wrap_content" />
    <ScrollView
        android:id="@+id/scrollview"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_score"
        android:layout_marginTop="8dp"
        android:layout_alignBottom="@id/iv"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@id/iv"
        android:layout_height="wrap_content">
        <TextView
            android:focusable="true"
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/tv_name"
        android:layout_alignParentRight="true"
        android:id="@+id/ji"
        android:textSize="14sp"
        android:layout_marginRight="12dp"
        android:text="集"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_alignBottom="@id/tv_name"
        android:hint="更新"
        android:textStyle="bold"
        android:layout_toLeftOf="@id/ji"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/tv_name"
        android:layout_toLeftOf="@id/tv_time"
        android:textSize="14sp"
        android:text="更新至"
        android:layout_height="wrap_content" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="56dp">
    <View
        android:layout_width="match_parent"
        android:background="@color/item_side"
        android:layout_height="2dp"/>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="54dp">
    <org.lenve.customshapeimageview.CustomShapeImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/zu_item_iv"
        android:layout_marginLeft="10dp"
        app:shape="circle"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="18dp"
        android:text="叫兽"
        android:gravity="center"
        android:id="@+id/zu_item_tv1"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/zu_item_iv"
        android:background="@drawable/zu_textview"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kiss"
        android:id="@+id/zu_item_tv2"
        android:layout_alignTop="@id/zu_item_tv1"
        android:layout_toRightOf="@id/zu_item_tv1"/>
    <TextView
        android:id="@+id/zu_item_tv3"
        android:layout_alignLeft="@id/zu_item_tv1"
        android:layout_below="@id/zu_item_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
</LinearLayout>